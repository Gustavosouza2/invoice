generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  email         String    @unique
  name          String
  password      String?
  phone         String?
  updatedAt     DateTime  @updatedAt
  emailVerified Boolean   @default(false)
  image         String?
  accounts      Account[]
  Invoice       Invoice[]
  sessions      Session[]
}

model Account {
  id         String   @id
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String
  accountId  String
  password   String?
  providerId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String   @unique
  expiresAt DateTime
  userId    String
  ipAddress String
  userAgent String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Invoice {
  id                   String   @id @default(uuid())
  userId               String
  createdAt            DateTime @default(now())
  customerCnpjOrCpf    String
  customerEmail        String?
  customerName         String
  invoiceNumber        Int
  issueDate            DateTime @default(now())
  providerCnpj         String
  providerMunicipalReg String
  providerName         String
  serviceDescription   String
  serviceValue         Float
  updatedAt            DateTime @updatedAt
  type                 String?  @default("WithoutIA")
  File                 File?
  user                 User     @relation(fields: [userId], references: [id])
}

model File {
  id        String   @id @default(uuid())
  url       String
  type      String
  invoiceId String   @unique
  createdAt DateTime @default(now())
  invoice   Invoice  @relation(fields: [invoiceId], references: [id])
}
